<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATOS PERSONALES"
                android:gravity="center_horizontal"
                android:textSize="28sp"
                android:id="@+id/tvTitulo"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Nombre"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_weight="0.001"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:hint="Ingrese nombre"
                    android:id="@+id/etNombre"
                    android:layout_weight="1.4"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Apellido"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_weight="0.001"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:hint="Ingrese apellido"
                    android:id="@+id/etApellido"
                    android:layout_weight="1.4"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Direcci贸n"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_weight="0.001"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:hint="Ingrese direcci贸n"
                    android:id="@+id/etDireccion"
                    android:layout_weight="1.4"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Ciudad"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_weight="0.001"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:hint="Ingrese ciudad"
                    android:id="@+id/etCiudad"
                    android:layout_weight="1.4"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Pais"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_weight="0.001"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:hint="Ingrese pais"
                    android:id="@+id/etPais"
                    android:layout_weight="1.4"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="C. Postal"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_weight="0.001"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:hint="digite codigo postal"
                    android:id="@+id/etCPostal"
                    android:layout_weight="1.4"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Tel. M贸vil"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_weight="0.001"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:hint="digite telefono m贸vil"
                    android:id="@+id/etTelMovil"
                    android:layout_weight="1.4"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:imeOptions="actionNext"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Email"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_weight="0.001"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:hint="Ingrese email"
                    android:id="@+id/etEmail"
                    android:layout_weight="1.4"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionSend"
                    />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnEnviar"
                android:text="Enviar"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>